@model IEnumerable<MVC5HomeWork1.Models.客戶資料>

@{
    ViewBag.Title = "客戶資料清冊";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "客戶資料", FormMethod.Post))
{
    <span>客戶名稱:</span> @Html.TextBox("customerName")

        @:客戶類別： @Html.DropDownList("客戶分類", ViewBag.客戶分類 as SelectList)  @*"--請選擇--"*@

        <input type="submit" value="Search" />
        <br />
        <br />
        <table class="table">
            <tr>
                <th>
                    @*@Html.DisplayNameFor(model => model.客戶名稱)*@
                    @Html.ActionLink("客戶名稱", "Index", new { sortBy = "客戶名稱", currentSort = ViewBag.CurrentSort })
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.統一編號)*@
                    @Html.ActionLink("統一編號", "Index", new { sortBy = "統一編號", currentSort = ViewBag.CurrentSort })
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.電話)*@
                    @Html.ActionLink("電話", "Index", new { sortBy = "電話", currentSort = ViewBag.CurrentSort })
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.傳真)*@
                    @Html.ActionLink("傳真", "Index", new { sortBy = "傳真", currentSort = ViewBag.CurrentSort })
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.地址)*@
                    @Html.ActionLink("地址", "Index", new { sortBy = "地址", currentSort = ViewBag.CurrentSort })
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Email)*@
                    @Html.ActionLink("Email", "Index", new { sortBy = "Email", currentSort = ViewBag.CurrentSort })
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.客戶分類)*@
                    @Html.ActionLink("客戶分類", "Index", new { sortBy = "客戶分類", currentSort = ViewBag.CurrentSort })
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.客戶名稱)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.統一編號)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.電話)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.傳真)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.地址)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.客戶分類)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
        }
