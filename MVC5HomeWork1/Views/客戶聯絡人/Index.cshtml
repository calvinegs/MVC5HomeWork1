@model IEnumerable<MVC5HomeWork1.Models.客戶聯絡人>

@{
    ViewBag.Title = "客戶聯絡人清單";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "客戶聯絡人", FormMethod.Get))
{
    <span>聯絡人姓名</span>@Html.TextBox("聯絡人姓名");
    <span>職稱</span>@Html.TextBox("職稱");
    <input type="submit" name="Search" />
    <br />
    <br />

<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.職稱)*@
            @Html.ActionLink("職稱", "Index", new { sortBy = "職稱", currentSort = ViewBag.CurrentSort })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.姓名)*@
            @Html.ActionLink("姓名", "Index", new { sortBy = "姓名", currentSort = ViewBag.CurrentSort })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Email)*@
            @Html.ActionLink("Email", "Index", new { sortBy = "Email", currentSort = ViewBag.CurrentSort })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.手機)*@
            @Html.ActionLink("手機", "Index", new { sortBy = "手機", currentSort = ViewBag.CurrentSort })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.電話)*@
            @Html.ActionLink("電話", "Index", new { sortBy = "電話", currentSort = ViewBag.CurrentSort })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.客戶資料.客戶名稱)*@
            @Html.ActionLink("客戶名稱", "Index", new { sortBy = "客戶名稱", currentSort = ViewBag.CurrentSort })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.職稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.姓名)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.手機)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.電話)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
}
